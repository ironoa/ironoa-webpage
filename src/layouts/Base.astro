---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogUrl?: string;
}
const {
  title = 'ironoa — Independent Polkadot & Kusama Validator',
  description = 'Independent validator services for the Polkadot ecosystem, operated from Switzerland with high-end hardware and an excellent operational record.',
  canonical = new URL(Astro.url.pathname, Astro.site).toString(),
  ogUrl = canonical
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="Polkadot validator, Kusama validator, 1KV Program, blockchain validator, Swiss validator, crypto valley" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={ogUrl} />

    <!-- Canonical + alternates -->
    <link rel="canonical" href={canonical} />
    <link rel="alternate" href="https://ironoa.com" hreflang="x-default" />
    <link rel="alternate" href="https://ironoa.ch" hreflang="de-CH" />
    <link rel="alternate" href="https://ironoa.io" hreflang="en-US" />

    <!-- Icons/manifest (drop files into /public) -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />

    <!-- Fonts + icons -->
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin />
    <link rel="preload" as="style" onload="this.rel='stylesheet'"
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300..800&display=swap">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@mdi/font@7.4.47/css/materialdesignicons.min.css">
  </head>
  <body>
    <header class="container">
      <a href="/" aria-label="ironoa home"><strong>ironoa</strong></a>
      <button class="burger-menu" aria-label="Open menu" onclick="document.querySelector('nav').classList.add('open')">
        <i class="mdi mdi-menu"></i>
      </button>
      <nav>
        <button class="close-menu" aria-label="Close menu" onclick="this.parentElement.classList.remove('open')">
          <i class="mdi mdi-close"></i>
        </button>
        <a href="/polkadot" onclick="this.parentElement.classList.remove('open')">Polkadot</a>
        <a href="/kusama" onclick="this.parentElement.classList.remove('open')">Kusama</a>
        <a href="/about" onclick="this.parentElement.classList.remove('open')">About</a>
        <a href="/terms" onclick="this.parentElement.classList.remove('open')">Terms</a>
      </nav>
    </header>

    <main class="container main">
      <slot />
    </main>

    <footer class="container">
      <span>© {new Date().getFullYear()} ironoa</span>
      <div style="display: flex; gap: 1rem; align-items: center; margin: 0.5rem 0;">
        <a href="https://www.linkedin.com/in/alessioonori/" target="_blank" rel="noreferrer" aria-label="LinkedIn" style="color: inherit; font-size: 1.5rem; transition: opacity 0.2s;">
          <i class="mdi mdi-linkedin"></i>
        </a>
        <a href="https://github.com/ironoa" target="_blank" rel="noreferrer" aria-label="GitHub" style="color: inherit; font-size: 1.5rem; transition: opacity 0.2s;">
          <i class="mdi mdi-github"></i>
        </a>
      </div>
      <span class="muted">Independent Polkadot & Kusama Validator</span>
    </footer>
  </body>
</html>
